%h1
  All Items

= link_to "Add New Media", new_profile_path, class: 'btn'

= render 'media_library/searches/search_bar', type: 'profiles'

%table
  %thead
    %tr
      %td Title
      %td Type
      %td Edit
      %td Delete
  %tbody
  - @items.each do |item|
    %tr
      %td
        = link_to item.title, edit_profile_path(item)
      %td
        = item.content_type
      %td
        = link_to "edit", edit_profile_path(item)
      %td
        = link_to "remove media", "items/#{item.id}", method: :delete, confirm: "Are you sure?"
